<html>
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    @*<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/select/1.6.2/js/dataTables.select.min.js" rel="stylesheet">
    <link href="https://editor.datatables.net/extensions/Editor/js/dataTables.editor.min.js" rel="stylesheet">
    <link href="https://cdn.datatables.net/datetime/1.4.0/js/dataTables.dateTime.min.js" rel="stylesheet">
</head>
<body>
    <h1 class="text-center">Employee List</h1>

    <!-- Button Insert Data-->
    <div class="row">
        <div class="col d-flex justify-content-between">
            <button type="button" class="btn btn-primary mb-2" data-toggle="modal" data-target="#modalInsertData">
                <i class="fa fa-plus-circle"></i>
            </button>
        </div>
    </div>

    <!--Data Table-->
    <table id="myTable" class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>No</th>
                <th>NIK</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Action</th>
                @*<th style="text-align:center;width:100px;">
                Add row <button type="button" data-func="dt-add" class="btn btn-success btn-xs dt-add">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
                </th>*@
            </tr>
        </thead>
        <tbody id="tbodyEmployee">
        </tbody>
    </table>

    <!-- Modal Detail-->
    <div class="modal fade" id="modalEmployee" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Details</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-bodydetail">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!--Modal Insert Employee-->
    <div class="modal fade" id="modalInsertData" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h5 class="modal-title text-capitalize text-center w-100" id="employeeModalTitle">Add Employee</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="formInsertEmployee">
                    <div class="modal-body">
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="nik" class="font-weight-bold pl-2">NIK</label>
                                <input type="text" name="nik" id="nik" class="form-control" required />
                            </div>
                            <div class="col form-group">
                                <label for="firstName" class="font-weight-bold pl-2">First Name</label>
                                <input type="text" name="firstName" id="firstName" class="form-control" required />
                            </div>
                            <div class="col form-group">
                                <label for="lastName" class="font-weight-bold pl-2">Last Name</label>
                                <input type="text" name="lastName" id="lastName" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="birthDate" class="font-weight-bold pl-2">Birth Date</label>
                                <input type="date" name="birthDate" id="birthDate" class="form-control" required />
                            </div>
                            <div class="col form-group">
                                <label class="font-weight-bold" for="gender">Gender</label>
                                <div class="input-group">
                                    <div class="form-check form-check-inline">
                                        <input type="radio" class="form-check-input" id="gender" name="gender" value=0 @*id="genderMale"*@ />
                                        <label class="form-check-label" for="genderMale">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input type="radio" class="form-check-input" id="gender" name="gender" value=1 @*id="genderFemale"*@ />
                                        <label class="form-check-label" for="genderFemale">Female</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="hiringDate" class="font-weight-bold pl-2">Hiring Date</label>
                                <input type="date" name="hiringDate" id="hiringDate" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="email" class="font-weight-bold" pl-2">Email</label>
                                <input type="email" name="email" id="email" class="form-control" required />
                            </div>
                            <div class="col form-group">
                                <label for="phone" class="font-weight-bold pl-2">Phone Number</label>
                                <input type="text" name="phone" id="phone" minlength="12" class="form-control" />
                            </div>
                            <div class="col form-group">
                                <label for="managerId" class="font-weight-bold pl-2">Manager Id</label>
                                <input type="text" name="managerId" id="managerId" minlength="5" class="form-control" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="modal-footer bg-dark">
                    <button type="submit" id="submit" class="btn btn-primary " data-dismiss="modal">
                        <i class="fa fa-paper-plane" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>


    <!--Modal Edit Employee-->
    <div class="modal fade" id="employeeEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title1 text-capitalize" id="employeeEditModalTitle">Edit Employee</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="formEditEmployee">
                    <div class="modal-body">
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="firstName" class="font-weight-bold pl-2">First Name</label>
                                <input type="text" name="firstName" id="firstName" class="form-control" required />
                                <small class="error-firstName"></small>
                                <input type="hidden" name="nik" id="nik" />
                            </div>
                            <div class="col form-group">
                                <label for="lastName" class="font-weight-bold pl-2">Last Name</label>
                                <input type="text" name="lastName" id="lastName" class="form-control" required />
                                <small class="error-lastName"></small>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="birthDate" class="font-weight-bold pl-2">Birth Date</label>
                                <input type="date" name="birthDate" id="birthdate" class="form-control" required />
                                <small class="error-birthDate"></small>
                            </div>
                            <div class="col form-group">
                                <label class="font-weight-bold" for="gender">Gender</label>
                                <div class="input-group" id="gender">
                                    <div class="form-check form-check-inline">
                                        <input type="radio" class="form-check-input" name="gender" value="Male" id="genderMale" required />
                                        <label class="form-check-label" for="genderMale">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input type="radio" class="form-check-input" name="gender" value="Female" id="genderFemale" required />
                                        <label class="form-check-label" for="genderFemale">Female</label>
                                    </div>
                                </div>
                                <small class="error-gender"></small>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="hiringDate" class="font-weight-bold pl-2">Hiring Date</label>
                                <input type="date" name="hiringDate" id="hiringDate" class="form-control" required />
                            </div>
                            <div class="col form-group">
                                <label for="phone" class="font-weight-bold pl-2">Phone Number</label>
                                <input type="text" name="phone" id="phone" class="form-control" />
                                <small class="error-phone"></small>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                                <label for="email" class="font-weight-bold" pl-2">Email</label>
                                <input type="email" name="email" id="email" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-dark  box-shadow">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Sumbit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
@section Scripts{
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>

    <!-- File Export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>

    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>
    <script src="~/js/employee.js" asp-append-version="true"></script>

}